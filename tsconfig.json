{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@config": [
        "src/problem5/config"
      ],
      "@config/*": ["src/problem5/config/*"],
      "@application/*": ["src/problem5/application/*"],
      "@controllers/*": ["src/problem5/controllers/*"],
      "@database": ["src/problem5/database"],
      "@database/*": ["src/problem5/database/*"]
    },

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  }
}